{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./build/",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "ES6",
		"target": "ES6",
		"jsx": "react",
		"allowJs": false,
		"moduleResolution": "node",
		"noEmitOnError": true,
		"strict": true,
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["chrome-types", "node"]
	}
}
